<h1>Presentations</h1>

<!--Table header to display presentations and their attributes-->
<table class="table table-striped table-bordered table-hover">
  <thead class="thead-dark">
    <tr>
      <th>Presentation Id</th>
      <th>Name</th>
      <th>Time</th>
      <th>Date</th>
      <th>Presenter Id</th>
      <th>Evaluations</th>
      <!--If user is teacher, allows to modify or delete presentation-->
      <% if current_user.role == "Teacher" %>
        <%# <th>Modify</th> %>
        <th>Delete</th>
      <% end %>
    </tr>
  </thead>
  <!--Table content to display presentations and their attributes-->
  <tbody>
    <% @presentations.each do |presentation| %>
    <!--Content of each presentations-->
      <tr>
        <td><%= presentation.id %></td>
        <td><%= presentation.Name %></td>
        <td><%= presentation.Time %></td>
        <td><%= presentation.Date %></td>
        <td><%= presentation.student_id %></td>

        <td><%= link_to 'Evaluations', presentation %></td>
        <% if current_user.role == "Teacher" %>
          <%# <td><%= link_to 'Modify', edit_presentation_path(presentation, @user) %></td>
          <td><%= link_to 'Delete', presentation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

